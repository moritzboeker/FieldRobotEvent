<launch>
   <master auto="start"/>

 <!-- Run the map server --> 
    <node name="map_server" pkg="map_server" type="map_server" args="$(find map)/emptyMap.yaml">
     <param name="frame_id" value="map" />
    </node>

 <!-- Run gmapping -->
    <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen" >
     <remap from="scan" to="/front/scan" />
     <param name="odom_frame" value="odom" />
     <param name="base_frame" value="base_link" />
     <param name="map_frame" value="map"/>
     <param name="map_update_interval" value="0.2"/>
     <param name="linearUpdate" value="0.5"/>
     <param name="angularUpdate" value="0.25"/>
     <param name="delta" value="0.05"/>
    </node>

 <!--- Run move_base --> 
   <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find jackal_2dnav)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find jackal_2dnav)/param/costmap_common_params.yaml" command="load" ns="local_costmap" /> 
    <rosparam file="$(find jackal_2dnav)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find jackal_2dnav)/param/global_costmap_params.yaml" command="load" /> 
    <rosparam file="$(find jackal_2dnav)/param/base_local_planner_params.yaml" command="load" />
    <rosparam file="$(find jackal_2dnav)/param/base_global_planner_params.yaml" command="load" />
    <rosparam file="$(find jackal_2dnav)/param/move_base_params.yaml" command="load" />
   </node>

  <!-- Run rviz -->
  <node pkg="rviz" type="rviz" name="rviz"
    args="-d $(find jackal_2dnav)/rviz_cfg/navigation.rviz"/>

</launch>
